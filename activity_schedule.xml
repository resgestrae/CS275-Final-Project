<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/nestbackground"
    tools:context=".ScheduleActivity" >

   <ListView
        android:id="@+id/schedLV"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:textAlignment="center" />

   <Button
        android:id="@+id/addNewBT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedLV"
        android:background="@drawable/chtime_buttons"
        android:text="@string/addNewClass"
        android:typeface="serif"
        android:textColor="#42311D" 
        android:onClick="addClass"/>
   
    <ImageView
        android:id="@+id/borderIV"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/nestborderlogo" />


</RelativeLayout>
